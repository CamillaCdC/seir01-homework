<%= form_for @book do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :author %>
  <%= f.text_field :author %>

  <%= f.label :date, 'Date Published' %>
  <%= f.text_field :date, :placeholder => 'YYYY-MM-DD'%>

  <%= f.label :image %>
  <%= f.url_field :image %>

    <%= f.label :book_id %>
  <%= f.select :book_id, Book.pluck(:author, :id), :include_blank => '' %>

  <%= f.submit %>
<% end %>