<%= form_for @author do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :required => true, :autofocus => true%>

  <%= f.label :nationality %>
  <%= f.text_field :nationality %>

  <%= f.label :dob, 'Date of Birth' %>
  <%= f.text_field :dob, :placeholder => 'YYYY-MM-DD'%>

  <%= f.label :genre %>
  <%= f.text_field :genre %>

  <%= f.label :image %>
  <%= f.text_field :image %>

  <%= f.label :wiki %>
  <%= f.text_field :wiki %>

  <%= f.submit %>
<% end  %>
