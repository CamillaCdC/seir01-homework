<h1><%= @book.title %></h1>

<%= image_tag @book.image, :class =>'feature' if @book.image.present? %>
  <ul>
    <li>Title: <%= @book.title %></li>
    <% if @book.author.present? %>
      <li> Author:
        <%= link_to @book.author.name, @book.author %></li>
    <% end  %>
    <li>Year: <%= @book.year %></li>
    <li>Publisher: <%= @book.publisher %></li>
    <li>Image: <%= @book.image %></li>
    <li>Bio: <%= @book.bio %></li>
  </ul>

<div class="controls">
  <%= link_to 'Edit Book', edit_book_path(@book) %>
  <%= button_to 'Delete Book', @book, :method => 'delete' %>

</div>
