<%= form_for @production do |p| %>
  <%= p.label :title %>
  <%= p.text_field :title, :required => true, :autofocus => true %>

  <%= p.label :director %>
  <%= p.text_field :director %>

  <%= p.label :opening %>
  <%= p.date_field :opening %>

  <%= p.label :closing %>
  <%= p.date_field :closing %>

  <%= p.label :image %>
  <%= p.url_field :image, :required => true %>

  <%= p.label :awards %>
  <%= p.text_field :awards %>

  <%= p.label :theatre_id %>
  <%= p.select :theatre_id, Theatre.pluck(:name, :id), :include_blank => true %>


  <%= p.submit %>
<% end  %>
