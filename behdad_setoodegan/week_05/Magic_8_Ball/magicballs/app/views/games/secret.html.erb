<h2>Guess the secret number</h2>
<h3>Choose a number between 1 to 10</h3>
<input type="number" id="num">
<button id="secretBtn" onclick="change()">Check</button>
<h3 id="answer"></h3>
<script>
    function change() // no ';' here
    {
        let randNumber = Math.floor(Math.random() * 10)+1
        let check = document.getElementById("num").value
        if (check == randNumber){
            document.getElementById("answer").innerHTML = "YESSS, You are correct."
        } else{
            document.getElementById("answer").innerHTML = `No, you were wrong the answer was ${randNumber}.`
        }
    }
</script>