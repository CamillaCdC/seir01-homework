<h2>New Mountain</h2>


<form  action=" <%= mountains_path %> " method="post">
  <label>
    Name:
    <input name="name" required>
  </label>
  <label>
    Image:
    <input type="url" name="image">
  </label>
  <label>
    Height(m):
    <input type="number" name="height">
  </label>
  <label>
    Range:
    <input name="range">
  </label>
  <label>
    First Ascent:
    <input name="first_ascent">
  </label>
  <button>Create Mountain</button>
</form>
