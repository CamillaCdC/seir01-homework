<h2>New Mountain</h2>

<form action="<%= mountains_path %>" method="post">
  <label>
    Name:
    <input name="name" required>
  </label>

  <label>
    Image:
    <input type="url" name="image">
  </label>

  <label>
    Location:
    <input type="text" name="location">
  </label>

  <label>
    Height:
    <input type="number" name="height" required>
  </label>

  <label>
    Height Above Sea Level:
    <input type="number" name="height_sealevel" required>
  </label>

  <button>Create mountain</button>
</form>
